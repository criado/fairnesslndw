% Color definitions from preliminary style guide
% Names are made up but logical, add ZIB prefix as a safeguard for
% uniqueness.
\definecolor{ZIBblue}{cmyk}{1, 0.8, 0, 0.3}
\definecolor{ZIBlightblue}{cmyk}{1, 0.22, 0.26, 0.09}
\definecolor{ZIBviolet}{cmyk}{0.8, 0.99, 0, 0}
\definecolor{ZIBpink}{cmyk}{0.4, 1, 0.19, 0.11}
\definecolor{ZIBgreen}{cmyk}{0.78, 0.11, 1, 0}
\definecolor{ZIByellow}{cmyk}{0.18, 0.38, 1, 0.07}
\definecolor{ZIBorange}{cmyk}{0, 0.7, 0.95, 0}
\definecolor{ZIBred}{cmyk}{0.25, 1, 1, 0.26}

\definecolor{ZIBprimary}{named}{ZIBblue}
